<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cartdetail</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../styles/style.css">
    <link rel="stylesheet" href="../styles/cart.css">
    <script src="/scripts/fetch.js"defer></script>
    <script src="/scripts/totalval.js"defer></script>
</head>
<body>
    <%- include('includes/menu.ejs') %>
    <h1 id="cart">Cart</h1>
    <div class="cartcontainer">
        <% if(cartdata){ %>
        <% for(const data of cartdata.orders){ %>
        <section class="cartdetail">
            <div>
                <h2><%= data.title %></h2>
                <p><%= data.price %><span><%= (data.quanity*data.price) %></span></p>
                <p>Quantity:<%= data.quanity %></p>
            </div>
        </section>
        <% } %>
        <section>
            <p>Total:Rs<span id="totalbtn"></span></p>
            <form action="/order" method="post">
                <button id="btn">Buy products</button>
            </form>
        </section>
    </div>
        <% } else{%>
            <h1 id="cartinfo">Add to cart </h1>
            <% } %>        
    
</body>
</html>